<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF4DC"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/ava"
        android:layout_margin="30dp"
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:background="#F6E4BC"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/myName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя"
                android:textSize="30dp"
                android:textColor="#673100"/>
            <TextView
                android:id="@+id/userStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Продавец"
                android:textSize="20dp"
                android:textColor="#673100"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выйти из учетной записи"
        android:backgroundTint="#FFB923"
        android:textColor="#673100"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/newAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Создать объявление"
        android:backgroundTint="#FFB923"
        android:textColor="#673100"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/myTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Мои объявления"
        android:textSize="20dp"
        android:textColor="#673100"/>
    <ListView
        android:id="@+id/myAdds"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</LinearLayout>