<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFragment"
    android:background="#FFF4DC"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Мне понравилось:"
        android:textSize="30dp"
        android:textColor="#673100"
        android:textAlignment="center"/>
    <ListView
        android:id="@+id/myFavs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
    <ImageView
        android:layout_marginTop="70dp"
        android:id="@+id/sadSmile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@drawable/sad"
        android:animation="@anim/anim_shake"/>
    <TextView
        android:id="@+id/sadText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Вам ничего не нравится"
        android:textSize="20dp"
        android:textColor="#673100"
        android:layout_marginTop="10dp"/>
</LinearLayout>